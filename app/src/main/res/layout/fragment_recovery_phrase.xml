<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.BitcoindevkitSampleApp.Fragments">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fira_mono_medium"
        android:gravity="center"
        android:text="@string/recovery_phrase"
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@+id/recoveryPhrase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recoveryPhrase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/fira_mono"
        android:gravity="center|start"
        android:text="@string/recovery_fragment_info"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settingsToWalletButton"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:fontFamily="@font/fira_mono"
        android:textAllCaps="false"
        android:backgroundTint="@color/frost_1"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintWidth_percent="0.70"
        android:text="@string/back_to_wallet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recoveryPhrase" />

</androidx.constraintlayout.widget.ConstraintLayout>